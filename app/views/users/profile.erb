<h1><%= @user.name.split.first %>'s Statistics</h1>
<a href="/users/<%= @user.id %>/edit">Change Personal Information</a>
<span class="entry-date block font-3-4 c-lt-gray"><%= "Account created on #{long_form_date(@user.created_at)}" %></span>
<a href="/cards">Brush Up On Chuck Norris</a>
<br>
<img src="http://www.sickchirpse.com/wp-content/uploads/2016/09/Chuck-Norris.jpg" alt="Profile">
<br>
<table class="tg">
  <tr>
    <th class="tg-87ym">Date</th>
    <th class="tg-87ym">Deck Name</th>
    <th class="tg-87ym">Cards in Deck</th>
    <th class="tg-87ym">Score</th>
    <th class="tg-87ym">Total Guesses</th>
  </tr>
  <% @rounds.each do |item| %>
  <tr>
    <td class="tg-18qn"><%= item.created_at %></td>
    <td class="tg-ixdi"><%= Deck.find(item.deck_id).name %></td>
    <td class="tg-ixdi">card</td>
    <td class="tg-ixdi"><%= item.score %></td>
    <td class="tg-ixdi"><%= item.guess %></td>
  </tr>
  <% end %>
</table>
