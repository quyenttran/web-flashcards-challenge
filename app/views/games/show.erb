<main>
  <div id="container">
    <h1><%= @game.deck.name.capitalize %> Trivia</h1>
    <%= @game.deck.cards.find(session['card_id']).question %>
    <p>Enter your guess:</p>
    <form action='/cards/:id' method='get'>
    <input type='textarea' name='guess'>
    <input type='submit' value='Submit your guess'>
    </form>
  </div>
</main>
