<h1>Falshcards</h1>

<h2><%= @deck.name %></h2>

<p><%= @card.question %></p> 

<form action="<%= @card.id + 1 %>" method="post">
  <% if @card.persisted? %>
    <input type="hidden" name="_method" value="put" />
  <% end %>

  <div class="fieldset">
    <label for="title_input">Title:</label>
    <input type="text" name="card[title]" placeholder="<%= @card.question %>">
  </div>

    
  <input type="submit">
</form>