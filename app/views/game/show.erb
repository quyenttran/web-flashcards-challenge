<main>
  <div id="container">
    <h1><%= Deck.find(session['deck_id']).name.capitalize %> Trivia</h1>
    <%= session['current_deck'].find { |card| card.id == (session['card_id'])}.question %>
    <p>Enter your guess:</p>
    <form action='/cards/guess' method='post'>
    <input type='hidden' name='guess[round_id]' value="session['round_id']">
    <input type='hidden' name='guess[card_id]' value="session['card_id']">
    <input type='text' name='guess[guess]'>
    <input type='submit' value='Submit your guess'>
    </form>
  </div>
</main>
