<main>
  <div class="container">
    <h1 class="game-header"><%= Deck.find(session[:deck_id]).name.capitalize %> Trivia</h1>
    <div class="card flashcard-wrapper">
    <p class="flashcard-qa"><%= session[:question] %></p>
      <p class="flashcard-prompt">Enter your guess:</p>
      <form class="flashcard-form" action='/cards/<%= session[:card_id] %>/guesses' method='post'>
        <input class="flashcard-input" type='text' name='guess'>
        <input class="game-buttons flashcard-button" type='submit' value='Submit your guess'>
      </form>
    </div>
  </div>
</main>
